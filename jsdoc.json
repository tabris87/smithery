{
  "source": {
    "include": [
      "lib/",
      "package.json",
      "README.md",
      "docu/CONTRIBUTING.md"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules/|blub/|bin/)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "node_modules/better-docs"
  }
}