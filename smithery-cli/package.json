{
  "name": "smithery-cli",
  "version": "0.1.0",
  "description": "The cli interface for the smithery tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/tabris87/smithery"
  },
  "bin": {
    "smith": "bin/smithery-cli/src/cli.js"
  },
  "files": [
    "bin/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "npx mocha -r ts-node/register -r source-map-support/register src/**/*.spec.ts --diff --reporter spec --reporter mochawesome --reporter-options reportDir=reports/test-results,reportFilename=testResults",
    "test-debug": "npx mocha --inspect-brk -r ts-node/register src/**/*.spec.ts",
    "coverage": "npx nyc npm run test",
    "lint": "npx eslint . --ext .ts",
    "lint-report": "npx eslint . --ext .ts -f node_modules/eslint-detailed-reporter/lib/detailed.js -o reports/lintingReport.html",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "build": "npx tsc"
  },
  "author": "Adrian Marten",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^7.3.1",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "inquirer": "^7.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/concat-stream": "^1.6.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "concat-stream": "^2.0.0",
    "eslint": "^7.11.0",
    "eslint-detailed-reporter": "^0.8.0",
    "mocha": "^8.1.3",
    "mochawesome": "^6.1.1",
    "typescript": "^4.0.3"
  },
  "keywords": [
    "FOP",
    "Tool"
  ]
}
