{
  "name": "smithery",
  "version": "0.2.0",
  "author": "Adrian Marten",
  "repository": {
    "type": "git",
    "url": "https://github.com/tabris87/smithery.git"
  },
  "license": "Apache-2.0",
  "description": "The \"house\" of SPL blacksmiths, to provide tooling for Software Product Line Engenieering.",
  "scripts": {
    "test": "npx jest --config jest.config.js",
    "lint": "tslint -p tsconfig.json",
    "format": "npx prettier --write \"bin/**/*.ts\" \"lib/**/*.ts\"",
    "build": "npx tsc",
    "prepare": "exit 0",
    "prepublishOnly": "exit 0",
    "preversion": "exit 0",
    "version": "echo 'npm run format && git add -A src'",
    "postversion": "echo 'git push && git push --tags'"
  },
  "bin": {
    "smith": "./bin/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "./bin/api.js",
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^4.0.1",
    "css-what": "^3.2.1",
    "inquirer": "^7.0.2",
    "smithery-equipment": "^0.1.6"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "eslint": "^7.7.0",
    "jest": "^26.4.2",
    "jest-html-reporters": "^2.0.3",
    "jest-json-reporter": "^1.2.2",
    "prettier": "^2.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  }
}
